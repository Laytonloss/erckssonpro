{% extends 'base.html.twig' %}

{% block title %} Ercksson Project {% endblock %}

{% block body %}  

	{% if items %}

		<table id="items" class="table table-stripped">
			<thead>
				<tr>
					<th>Items</th>
					<th>Type</th>
					<th>Description</th>
					<th>Price</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				{% for item in items %}
					<tr>
						<td><a href="/item/{{item.id}}">{{item.itemname}}</a></td>
					
						<td>{{item.type}}</td>
					
						<td>{{item.description}}</td>

						<td>{{item.price}}</td>
					
						<td><a href="/item/edit/{{item.id}}" class="btn btn-light">Edit</a></td>
					
						<td><a href="#" class="btn btn-danger delete-item" data-id='{{item.id}}'>X</a></td>
					</tr>
				{% endfor %}
			</tbody>

		</table>

	{% else %}

		<p>No hay Items</p>

	{% endif %}


{% endblock %}

{% block javascripts %}

	<script src="/js/main.js"></script>

{% endblock %}